{
	"libRoot": "ThirdParty/",
	"projectRoot": "%{wks.location}/",
	"defines": [ "GE_OPENGL", "_CRT_SECURE_NO_WARNINGS" ],
	"projects": [
		{
			"name": "GenesisEngine-Client",
			"location": "GenesisEngine/Client/src/main/",
			"includes": "GenesisEngine/Client/src/main/include/"
		},
		{
			"name": "GenesisEngine-Server",
			"location": "GenesisEngine/Server/src/main/",
			"includes": "GenesisEngine/Server/src/main/include/"
		},
		{
			"name": "GenesisEngine-Core",
			"location": "GenesisEngine/Core/src/main/",
			"includes": "GenesisEngine/Core/src/main/include/"
		},
		{
			"name": "GenesisEngine-Client-Core",
			"location": "GenesisEngine/ClientCore/src/main/",
			"includes": "GenesisEngine/ClientCore/src/main/include/"
		},
		{
			"name": "Sandbox-Server",
			"location": "Sandbox/Server/src/main/",
			"includes": "Sandbox/Server/src/main/include/"
		}
	],
	"dependencies": [
		{
			"name": "spdlog",
			"packet": {
				"type": "git",
				"repo": "https://github.com/gmasterhd/spdlog"
			},
			"library": {
				"type": "premake",
				"script": "provided",
				"includeDir": "include/"
			}
		},
		{
			"name": "gtest",
			"packet": {
				"type": "git",
				"repo": "https://github.com/gmasterhd/googletest"
			},
			"library": {
				"type": "premake",
				"script": "provided",
				"includeDir": "googletest/include/"
			}
		},
		{
			"name": "boost/preprocessor",
			"packet": {
				"type": "git",
				"repo": "https://github.com/boostorg/preprocessor"
			},
			"library": {
				"type": "header",
				"includeDir": "include/"
			}
		},
		{
			"name": "toml++",
			"packet": {
				"type": "git",
				"repo": "https://github.com/gmasterhd/tomlplusplus"
			},
			"library": {
				"type": "premake",
				"includeDir": "include/"
			}
		},
		{
			"name": "json",
			"group": "nlohmann",
			"packet": {
				"type": "file",
				"name": "json.hpp",
				"path": "include/nlohmann/",
				"url": "https://raw.githubusercontent.com/nlohmann/json/develop/single_include/nlohmann/json.hpp"
			},
			"library": {
				"type": "header",
				"includeDir": "include/"
			}
		},
		{
			"name": "glm",
			"group": "glm",
			"packet": {
				"type": "git",
				"repo": "https://github.com/g-truc/glm"
			},
			"library": {
				"type": "header",
				"includeDir": ""
			}
		},
		{
			"name": "glfw",
			"packet": {
				"type": "git",
				"repo": "https://github.com/GMasterHD/glfw"
			},
			"library": {
				"type": "premake",
				"script": "provided",
				"includeDir": "include/"
			}
		},
		{
			"name": "glad",
			"packet": {
				"type": "git",
				"repo": "https://github.com/GMasterHD/glad"
			},
			"library": {
				"type": "premake",
				"script": "provided",
				"includeDir": "include/"
			}
		}
	],
	"links": {
		"Sandbox-Server": [
			"GenesisEngine-Core", "GenesisEngine-Server", "Sandbox-Server",
			"spdlog", "toml++", "json",
			"boost/preprocessor"
		],
		"Sandbox-Client": [ 
			"GenesisEngine-Core", "GenesisEngine-Client-Core", "GenesisEngine-Client", "GenesisEngine-Server", "Sandbox-Server",
			"spdlog", "toml++", "json", "glfw", "glad",
			"opengl32.lib"
		],
		"Sandbox-Client-Test": [ 
			"GenesisEngine-Core", "GenesisEngine-Client", "GenesisEngine-Server", "Sandbox-Server",
			"spdlog", "gtest", "toml++", "json", "glfw", "glad",
			"opengl32.lib"
		],
		"Sandbox-Server-Test": [
			"GenesisEngine-Core", "GenesisEngine-Server", "Sandbox-Server",
			"spdlog", "gtest", "toml++", "json"
		],
		"Sandbox-ServerLauncher": [
			"GenesisEngine-Core", "GenesisEngine-Server", "Sandbox-Server",
			"spdlog", "toml++", "json"
		],
		"GenesisEngine-Editor": [ 
			"GenesisEngine-Core", "GenesisEngine-Client", "GenesisEngine-Server",
			"spdlog", "toml++", "json", "glfw", "glad",
			"boost/preprocessor",
			"opengl32.lib"
		],
		"GenesisEngine-Client": [
			"GenesisEngine-Core", "GenesisEngine-Server", "GenesisEngine-Client",
			"spdlog", "toml++", "json", "glfw",
			"boost/preprocessor"
		],
		"GenesisEngine-Client-Test": [
			"GenesisEngine-Core", "GenesisEngine-Client",
			"spdlog", "gtest", "toml++", "json", "glfw", "glad",
			"boost/preprocessor",
			"opengl32.lib"
		],
		"GenesisEngine-Server": [
			"GenesisEngine-Core", "GenesisEngine-Server",
			"spdlog", "toml++", "json",
			"boost/preprocessor"
		],
		"GenesisEngine-Server-Test": [
			"GenesisEngine-Core", "GenesisEngine-Server",
			"spdlog", "gtest", "toml++", "json",
			"boost/preprocessor"
		],
		"GenesisEngine-Core": [
			"GenesisEngine-Core",
			"spdlog", "toml++", "json",
			"boost/preprocessor"
		],
		"GenesisEngine-Core-Test": [
			"GenesisEngine-Core",
			"spdlog", "gtest", "toml++", "json",
			"boost/preprocessor"
		],
		"GenesisEngine-Client-Core": [
			"GenesisEngine-Core", "GenesisEngine-Client-Core",
			"spdlog", "toml++", "json", "glfw", "glad",
			"boost/preprocessor"
		]
	}
}
